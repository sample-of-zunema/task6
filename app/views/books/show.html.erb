<p id="notice">
  <%= notice %>
</p>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <%= render 'users/list', user: @user, book: @newbook %>
        </div>
        <div class="col-md-8 offset-md-1">
            <p></p>
            <h2>Book detail</h2>
            <div class="detail_table">
            <%= render "books/detail", user: @user, book: @book %>
            </div>
            <%= render "books/comment_area", book: @book, book_comments: @book.book_comments, book_comment: @book_comment %>
            <tr>
                <td>
                <%= render "books/comment", book: @book, book_comment: @book_comment %>
                </td>
            </tr>
        </div>
    </div>
</div>