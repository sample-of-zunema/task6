<p id="notice">
  <%= notice %>
</p>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <%= render 'users/list', user: @user, book: @newbook %>
        </div>
        <div class="col-md-8 offset-md-1">
            <p></p>
            <h2>Book detail</h2>
            <table class="table">
                <tbody>
                    <tr>
                        <td>
                            <%= link_to user_path(@user.id) do %>
                                <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "30x30", fallback: "no_image.jpg" %><br>
                                <%= @user.name %>
                            <% end %>
                        </td>
                        <td>
                        <%= link_to book_path(@book.id) do %>
                            <%= @book.title %>
                        <% end %>
                        </td>
                        <td>
                            <%= @book.body %>
                        </td>

                        <td class="book_<%= @book.id %>">
                            <%= render 'books/favorites', book: @book %>
                        </td>
                        <% if @user.id == current_user.id %>
                        <td>
                            <%= link_to "Edit", edit_user_path, class: "btn btn-sm btn-success" %>
                        </td>
                        <td>
                            <%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger" %>
                        </td>
                        <% end %>
                        <td>
                            <p>コメント件数：<%= @book.book_comments.count %></p>
                        </td>
                    </tr>
                    <%= render "books/comment_area", book: @book, book_comments: @book.book_comments, book_comment: @book_comment %>
                    <tr>
                        <td>
                        <%= render "books/comment", book: @book, book_comment: @book_comment %>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>